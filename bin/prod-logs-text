#!/bin/bash
# View production logs from text files (readable with text editors)
# Usage: bin/prod-logs-text

set -euo pipefail

echo "📄 Viewing production logs from text files (Ctrl+C to exit)..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📁 Log source: rsyslog text files"
echo "📂 Physical path: /var/log/syslog"
echo ""

# Follow syslog and filter for our services
tail -f /var/log/syslog | grep -E "(weakauras-bot|weakauras-django|nginx)" --line-buffered
