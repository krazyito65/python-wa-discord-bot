#!/bin/bash
# View all production service logs in real-time
# Usage: bin/prod-logs-all

set -euo pipefail

echo "📝 Viewing all production service logs (Ctrl+C to exit)..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📁 Log sources: systemd journal (weakauras-bot, weakauras-django, nginx)"
echo "📂 Physical path: /var/log/journal/5ee67bd382c4251a97ac7ee268bfa2d0/"
echo ""

# Show combined logs from all services
sudo journalctl -f \
    -u weakauras-bot \
    -u weakauras-django \
    -u nginx \
    --since "10 minutes ago" \
    -o short-precise
