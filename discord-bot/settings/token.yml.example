# WeakAuras Discord Bot Configuration Template
# Copy this file to token.yml and fill in your actual Discord bot tokens

# Discord Bot Tokens
discord:
  tokens:
    # Development environment token
    dev: "your_dev_token_here"
    # Production environment token
    prod: "your_prod_token_here"

# Bot Settings
bot:
  # Permission system for administrative actions (like deleting macros)
  # Users need EITHER matching role names OR Discord permissions
  permissions:
    # Role names that grant admin access (case-insensitive)
    admin_roles:
      - "admin"
      - "regular"
    # Discord permissions that grant admin access
    # See: https://discordpy.readthedocs.io/en/stable/api.html#discord.Permissions
    admin_permissions:
      - "administrator"
      - "manage_channels"

  # WeakAuras branding
  logo_path: "resources/weakauras_logo.png"
  brand_color: 0x9f4af3  # WeakAuras purple

# Data Storage Settings
storage:
  # RECOMMENDED: Store data outside git repo to prevent accidental deletion
  # Use absolute path to store data safely outside the repository
  # data_directory: "~/weakauras-bot-data"

  # For development/testing, you can use relative path (will be inside repo)
  data_directory: "server_data"

# Event System Settings
events:
  # Enable/disable all events
  enabled: true

  # Temperature conversion event
  temperature:
    enabled: true
