{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Stop All and Start Django Background",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pkill -f 'python.*manage.py.*runserver' || true; pkill -f 'python.*main.py' || true; sleep 2; cd web && nohup uv run python manage.py runserver 8000 > ../django.log 2>&1 & echo 'All services stopped. Django server started in background (PID: $!)'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Stop All and Start Bot Background",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pkill -f 'python.*main.py' || true; pkill -f 'python.*manage.py.*runserver' || true; sleep 2; cd discord-bot && nohup uv run python main.py --env dev > ../bot.log 2>&1 & echo 'All services stopped. Bot started in background (PID: $!)'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Stop All Services",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pkill -f 'python.*manage.py.*runserver' || true; pkill -f 'python.*main.py' || true; echo 'All services stopped'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "View Bot Logs",
            "type": "shell",
            "command": "tail",
            "args": ["-f", "bot.log"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "View Django Logs",
            "type": "shell",
            "command": "tail",
            "args": ["-f", "django.log"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
